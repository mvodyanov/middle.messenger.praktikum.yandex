{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "repository": "https://github.com/actimeller/middle.messenger.praktikum.yandex",
  "author": "max vodyanov",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "lint": "eslint . --fix",
    "dev": "parcel src/index.html --open",
    "build": "parcel build src/index.html --target app",
    "start": "npm run build && node ./index.js",
    "prepare": "husky install",
    "test": "./node_modules/.bin/mocha -r jsdom-global/register"
  },
  "targets": {
    "app": {
      "context": "browser",
      "includeNodeModules": true,
      "outputFormat": "esmodule"
    }
  },
  "dependencies": {
    "express": "^4.17.2",
    "utils": "^0.3.1",
    "uuid": "^8.3.2"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint . --fix"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/register": "^7.17.0",
    "@parcel/transformer-inline-string": "^2.2.1",
    "@parcel/transformer-pug": "^2.2.1",
    "@parcel/transformer-sass": "^2.2.1",
    "@types/chai": "^4.3.0",
    "@types/jsdom": "^16.2.14",
    "@types/mocha": "^9.1.0",
    "@types/pug": "^2.0.6",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.10.0",
    "chai": "^4.3.6",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^7.0.4",
    "jsdom": "19.0.0",
    "jsdom-global": "3.0.2",
    "lint-staged": "^12.1.7",
    "mocha": "^9.2.1",
    "parcel": "^2.2.1",
    "parcel-bundler": "^1.12.5",
    "pug": "^3.0.2",
    "sass": "^1.45.0",
    "stylelint": "^14.2.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "typescript": "^4.5.4"
  }
}
